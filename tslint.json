{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "es2015.promise" ],
    "jsx": "react",
    "jsxFactory": "JSX.createElement",
    "rootDir": "./",
    "outDir": "dist",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noEmitOnError": false
  },
  "include": [
    "./**/*.js",
    "./**/*.jsx",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
